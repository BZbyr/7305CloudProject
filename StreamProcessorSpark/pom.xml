    <build>
        <finalName>StreamProcessorSpark</finalName>
        <plugins>
            <!--先编译java 再编译scala，scala有依赖文件-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </configuration>
                <!--<executions>-->
